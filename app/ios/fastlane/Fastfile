default_platform(:ios)

platform :ios do
  lane :beta do
    # Use match for code signing (appstore profile)
    match(
      type: "appstore", 
      readonly: true # ensures it pulls existing certs/profiles without modifying repo
    )

    # Build the Flutter app for iOS
    sh "flutter build ios --release --no-codesign"

    # Path to your App Store Connect API key
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_API_KEY_ISSUER_ID"],
      key_filepath: ENV["APP_STORE_CONNECT_API_KEY_KEY_FILE"],
      in_house: false
    )

    # Build the Xcode archive
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      clean: true
    )

    # Upload to TestFlight
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )
  end
end
